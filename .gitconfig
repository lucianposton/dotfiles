[user]
    name = Lucian Poston
    email = lucian.poston@gmail.com
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = lucian.poston@gmail.com
    smtpserverport = 587
[color]
    ui = auto
[alias]
    start = !git init && git commit --allow-empty -m \"Initial commit\"
    exec = "!exec "
    s = status
    st = status
    co = checkout
    c = commit
    b = branch
    br = branch
    a = add
    aa = add --all
    amend = commit --amend
    d = diff
    dc = diff --cached
    ds = diff --stat
    dw = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
    dcw = diff --cached --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
    m = merge
    mff = merge --ff-only
    mnoff = merge --no-ff
    p = pull
    pff = pull --ff-only
    f = fetch
    fa = fetch --all
    sh = show --format=fuller --decorate
    pupr = pup --remote

    # h = head
    # hp = head with patch
    # r = recent commits, only current branch
    # ra = recent commits, all reachable refs
    # l = all commits, only current branch
    # la = all commits, all reachable refs
    l = "!. ~/bin/.git-helpers && pretty_tabulated_git_log"
    la = !git l --all
    r = !git l -25
    ra = !git r --all
    ld = "!. ~/bin/.git-helpers && date_git_log"
    lda = !git ld --all
    h = !git l -1
    hp = "!. ~/bin/.git-helpers && show_git_head"
    lol = "!. ~/bin/.git-helpers && pretty_git_log"

    dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order
[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = less -RFX
[format]
    signoff = true
[rerere]
    enabled = true
[merge]
    conflictstyle = diff3
    tool = vimdiff
    log = 100
[push]
    default = simple
[diff "xxd"]
    textconv = xxd  # then *.sav diff=xxd in .gitattributes
[github]
    user = lucianposton
[amazon]
    append-cr-url = true
    pull-request-by-default = true
[include]
    path = dotfiles_local/.gitconfig
