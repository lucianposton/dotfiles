[user]
    name = Lucian Poston
    email = lucian.poston@gmail.com
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = lucian.poston@gmail.com
    smtpserverport = 587
    cccmd = git-cc
[github]
    user = lucianposton
[color]
    ui = auto
[alias]
    st = status
    co = checkout
    br = branch
    aa = add --all
    amend = commit --amend
    d = diff
    dc = diff --cached
    ds = diff --stat
    dw = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
    mf = merge --ff-only
    mnf = merge --no-ff
    pullf = pull --ff-only
    fa = fetch --all

    # h = head
    # hp = head with patch
    # r = recent commits, only current branch
    # ra = recent commits, all reachable refs
    # l = all commits, only current branch
    # la = all commits, all reachable refs
    l = "!. ~/bin/.git-helpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all
    head = !git l -1
    h = !git head
    hp = "!. ~/bin/.git-helpers && show_git_head"
    lol = log --all --graph --pretty=tformat:'%C(red)%h%Creset%C(bold black):%Creset %C(cyan)%cr%Creset %C(blue)<%an>%Creset%C(bold magenta)%d%Creset %C(white)%s%Creset'
    lod = log --all --graph --pretty=tformat:'%C(red)%h%Creset%C(bold black):%Creset %C(green)%cd%Creset %C(blue)<%an>%Creset%C(bold magenta)%d%Creset %C(white)%s%Creset'
    lor = log --all --graph --pretty=tformat:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = less -RFX
[format]
    signoff = true
[rerere]
    enabled = true
[merge]
    conflictstyle = diff3
    tool = vimdiff
[push]
    default = simple
[amazon]
    append-cr-url = true
