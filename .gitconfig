[user]
    name = Lucian Poston
    email = lucian.poston@gmail.com
[sendemail]
    smtpencryption = tls
    smtpserver = smtp.gmail.com
    smtpuser = lucian.poston@gmail.com
    smtpserverport = 587
    cccmd = git-cc
[github]
    user = lucianposton
[color]
    ui = auto
[alias]
    st = status
    co = checkout
    br = branch
    aa = add --all
    amend = commit --amend
    d = diff
    dc = diff --cached
    ds = diff --stat
    dw = diff --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'
    mff = merge --ff-only
    mnoff = merge --no-ff
    pullff = pull --ff-only
    fa = fetch --all
    sh = show --format=fuller --decorate

    # h = head
    # hp = head with patch
    # r = recent commits, only current branch
    # ra = recent commits, all reachable refs
    # l = all commits, only current branch
    # la = all commits, all reachable refs
    l = "!. ~/bin/.git-helpers && pretty_tabulated_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all
    ld = "!. ~/bin/.git-helpers && date_git_log"
    lda = !git ld --all
    head = !git l -1
    h = !git head
    hp = "!. ~/bin/.git-helpers && show_git_head"
    lol = "!. ~/bin/.git-helpers && pretty_git_log"

[core]
    excludesfile = ~/.gitignore_global
    editor = vim
    pager = less -RFX
[format]
    signoff = true
[rerere]
    enabled = true
[merge]
    conflictstyle = diff3
    tool = vimdiff
[push]
    default = simple
[amazon]
    append-cr-url = true
